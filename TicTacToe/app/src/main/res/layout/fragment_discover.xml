<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/discover_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="disconected"/>


    <Button
        android:id="@+id/discover_find_opponent_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_green_background"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="find opponent" />

    <Button
        android:id="@+id/start_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_green_background"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="open game" />

    <Button
        android:id="@+id/discover_disconnect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_background"
        android:visibility="gone"
        android:text="disconnect" />

    <TextView
        android:id="@+id/text_gameplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"
        android:visibility="gone"/>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/single_box1"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box2"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box3"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1effffff"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/single_box4"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box5"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box6"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1effffff"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/single_box7"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box8"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#1effffff"/>

            <ImageView
                android:id="@+id/single_box9"
                android:layout_width="84dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/transparent" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        />


</LinearLayout>